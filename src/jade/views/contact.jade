extends ../template.jade
include ../partials/mixins

block append title 
	| Contact & Directions

block append style
	style.
		#portrait{
			width:100%;
		}

block content
	h1.text-center Locations
	hr
	.row
		.col-md-6.col-sm-12.text-center
			h3 Colonie
			.embed-responsive.embed-responsive-4by3
				iframe(width="100%" frameborder="0" style="border:0" src="https://www.google.com/maps/embed/v1/place?q=place_id:ChIJ8eMz160M3okRB6VBjO5dZ_o&key=AIzaSyA_b0HrflwJHyzYhNKyu8wO_S0zrv1i3lg&zoom=13" allowfullscreen)

		.col-md-6.col-sm-12.text-center
			h3 Delmar
			.embed-responsive.embed-responsive-4by3
				iframe(width="100%" frameborder="0" style="border:0" src="https://www.google.com/maps/embed/v1/place?q=274%20Delaware%20Ave.%20%20Delmar%2C%20NY%2012054&key=AIzaSyA_b0HrflwJHyzYhNKyu8wO_S0zrv1i3lg&zoom=13" allowfullscreen)
	br
	
	h1.text-center(style="") Contact
	hr
	.row
		.col-sm-8.col-sm-offset-2.col-xs-12.text-center
			form#appointmentForm(method='POST' action='https://formspree.io/meyer.ej@gmail.com')
				input(type="hidden" name="_next" value="/appointment-thank-you.html")
				input(type="hidden" name="_subject" value="Appointment Request")
				.col-md-6.col-sm-12
					fieldset.form-group
						label(for="name") Name:
						input.form-control#name(name="name" type="text" required placeholder="John Smith")
				.col-md-6.col-sm-12
					fieldset.form-group
						label(for="email") Email Address:
						input.form-control#email(name="_replyto" type="email" required placeholder="example@email.com")
						span#email-invalid(style="visibility:hidden") Must use a valid email address
				.col-xs-12
					fieldset.form-group
						label(for="message") Message:
						textarea.form-control#message(rows='8' name="message" type="text" required placeholder="Enter a message")
				button.btn.btn-primary(type="submit") Submit
